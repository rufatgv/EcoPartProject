@model IEnumerable<BlogPost>

@{
    ViewData["Title"] = "Index";
}
<section id="first-section">
    <div class="first-section">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <a href="./home.html">Ön Səhifə</a>
                    <span>/ Blog</span>
                </div>
            </div>
        </div>
    </div>
</section>
<section id="second-section">
    <div class="second-section">
        <div class="container">
            <div class="row">
                <div class="col-lg-10 col-sm-12">

                    @foreach(var item in Model)
                    {
                    <div class="blogs">
                        <div class="carname">
                            <a asp-action="singlepost" asp-route-id ="@item.Id" asp-route-categoryId="@item.CategoryId">@item.Title</a>
                        </div>
                        <div class="date-by">
                            <span class="date">@item.CreatedDate.ToString("MMM dd, yyyy")</span>
                            <span class="by">@item.CreatedById</span>
                        </div>

                        <div class="car-content-first">
                           @Html.Raw(item.Paragraph)
                        </div>
                        <div class="carimage">
                            <a asp-action="singlepost" asp-route-id="@item.Id" asp-route-categoryId="@item.CategoryId">
                                <img src="~/uploads/images/@item.ImagePath" width="380" height="280" alt="post" />
                            </a>
                        </div>

                        <div class="read-continue-btn">
                            <button asp-action="singlepost" asp-route-id="@item.Id" asp-route-categoryId="@item.CategoryId">Davamını oxu</button>
                        </div>
                    </div>
                    }
                    
                 


                </div>
                <div class="col-lg-2 col-sm-12">
                    <div class="end-news">
                        <div class="title">
                            SON MƏQALƏLƏR
                        </div>
                        <div class="marka-name">
                            <ul>
                                <li><a href="#"> Toyota</a></li>
                                <li><a href="#"> Hyundai</a></li>
                                <li><a href="#"> BMW</a></li>
                                <li><a href="#"> Mercedes Benz</a></li>
                                <li style="border-bottom: none;"><a href="#"> Volkswagen</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section css{

    <link rel="stylesheet" href="~/assets/sass/blog.css">
} 