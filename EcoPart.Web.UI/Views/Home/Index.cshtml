
@{
    ViewData["Title"] = "Index";
}

<section id="first-section">
    <div class="first-section">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="marka-model">
                        <div class="marka d-flex align-items-center">
                            <span style="margin-right:3px;" class="mr-1">Category</span>  <i class="fas fa-caret-down"></i>
                        </div>
                        <div class="searchbox">
                            <i class="fas fa-search"></i>
                        </div>
                    </div>
                    <div class="dropdown-checkbox-search">
                        <div class="searchmarka">
                            <input type="text" placeholder="Axtar...">
                        </div>
                        <div class="checkbox">
                            @foreach (var item in ViewBag.Categories)
                            {
                                <div class="scroll-checkbox">
                                    <a asp-controller="shop" asp-action="category" asp-route-categoryId="@item.Id">@item.Name</a>
                                </div>
                            }
                        </div>
                        <div class="close-btn">
                            <button id="close-btn">Bağla</button>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>

