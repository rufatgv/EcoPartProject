                                <span>Hesabım</span>
                                <i class="fas fa-caret-down"></i>

                            </div>
                            <div class="dropdown-account">
                                <div class="first">
                                    Sifarişlər
                                </div>
                                <div class="second">
                                    Geri qaytarılma tələbləri
                                </div>
                                <div class="third">
                                    Gözləmə səbəti
                                </div>
                                <div class="fourth">
                                    Xüsusi sifarişlər
                                </div>
                                <div class="sign-btn">
                                    <div class="btns">
                                        <div class="signin">
                                            <button> <a style="color:white;text-decoration:none;" href="./login.html">Daxil ol</a> </button>
                                        </div>
                                        <div class="signup">
                                            <button> <a href="./register.html"> Qeydiyyatdan keç</a></button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="notific">
                                <i class="fas fa-bell"></i>
                            </div>

                            <div class="not-count">
                                0
                            </div>
                        </div>
                        <div class="dropdown-noti">
                            <div class="title">
                                <div class="title-name">
                                    Bildirimlər
                                </div>
                                <div class="notification-count">
                                    0
                                </div>
                            </div>
                            <div class="content">
                                <div class="info">
                                    <div class="new-products">
                                        YENI MƏHSULLAR
                                    </div>
                                    <div class="customer-info">
                                        Hörmətli müştərilər, stoka yeni məhsullar gəlmişdir.
                                    </div>
                                    <div class="two-btn">
                                        <a href="#">ƏTRAFLI OXU</a>
                                        <a id="b" href="#">BURAX</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="secondpart-header">
            <div class="container">
                <div class="row">
                    <div class="col-lg-3 col-sm-12">
                        <div class="logo">
                            <a href="./home.html">
                                <img src="./assets/img/logo_mobex.png" alt="mobex">
                            </a>
                        </div>

                    </div>

                    <div class="col-lg-6 col-sm-12">
                        <div class="search">
                            <input type="text" placeholder="Məhsul axtar">
                            <button><i class="fas fa-search"></i></button>
                        </div>

                    </div>

                    <div class="col-lg-3 col-sm-12">
                        <div class="waiting-basket">
                            <div class="waiting">
                                <i class="fas fa-clock"></i>
                                <span>Gözləmə səbəti</span>
                                <i class="fas fa-caret-down"></i>
                            </div>
                            <div class="dropdown-waiting">
                                Gözləmə səbəti
                            </div>
                            <div class="basket-card">
                                <i class="fas fa-shopping-basket"></i>
                                <span>Sifariş səbəti</span>
                                <i class="fas fa-caret-down"></i>
                            </div>
                            <div class="dropdown-basket">
                                <div class="products">
                                    <div class="picture-price-name">
                                        <div class="picture">
                                            <img src="./assets/img/B37316N27K.jpeg" alt="product">
                                        </div>
                                        <div class="price-name">
                                            <div class="name">
                                                <a href="#"> Raspredval datciki B37316N27K</a>
                                            </div>
                                            <div class="price">
                                                6 x 23.40 ₼
                                            </div>
                                        </div>
                                        <div class="remove-icon">
                                            <i class="fas fa-times"></i>
                                        </div>



                                    </div>
                                </div>
                                <div class="product-btn">
                                    <button id="show-basket"> <a href="./basket.html">Səbəti göstər</a> </button>
                                    <button id="complete"><a href="#">Sifarişi tamamla</a></button>

                                </div>
                            </div>
                        </div>


                    </div>
                </div>
            </div>


            <div class="container">
                <div class="row">
                    <div class="col-lg-12 col-sm-12">
                        <div class="markas">
                            <ul>
                                <li>
                                    <a href="./products.html" style="padding-right: 20px;">Toyota/Lexus</a>
                                </li>
                                <li>
                                    <a href="#">Nissan / Infinity</a>
                                </li>
                                <li>
                                    <a href="#">Mitsubishi</a>
                                </li>
                                <li>
                                    <a href="#">Hyundai / Kia</a>
                                </li>
                                <li>
                                    <a href="#">Mercedes</a>
                                </li>
                                <li>
                                    <a href="#">BMW</a>
                                </li>
                                <li>
                                    <a href="#">Volkswagen</a>
                                </li>
                                <li>
                                    <a href="#">Audi</a>
                                </li>
                                <li>
                                    <a href="#">Land Rover</a>
                                </li>
                                <li>
                                    <a href="#">Ford</a>
                                </li>

                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <main>
        @RenderBody()
