    <footer>
        <div class="social-networks">
            <div class="container">
                <div class="name-fb-tw">
                    <div class="name">
                        Sosial şəbəkələr
                    </div>
                    <div class="fb-icon">
                        <i class="fab fa-facebook-f"></i>
                    </div>
                    <div class="fb-name">
                        Facebook
                    </div>
                    <div class="tw-icon">
                        <i class="fab fa-twitter"></i>
                    </div>
                    <div class="tw-name">
                        Twitter
                    </div>


                </div>
            </div>

        </div>

        <div class="links-page">
            <div class="container">
                <div class="row">
                    <div class="col-lg-7 col-sm-12">
                        <div class="common-about">

                            <div class="links">
                                <h6 class="oneh">Mobex Parts <i class="fas fa-angle-down"></i></h6>
                                <div class="one">
                                    <a href="#">Şirkət haqqında</a>
